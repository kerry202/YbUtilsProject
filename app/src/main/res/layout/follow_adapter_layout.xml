<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp71"
    android:background="@color/white">

    <ImageView
        android:id="@+id/msg_photo"
        android:layout_width="@dimen/dp43"
        android:layout_height="@dimen/dp43"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp16"
        android:src="@mipmap/orange_logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_toRightOf="@id/msg_photo"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="啦啦啦啦"
            android:textColor="@color/gray_333"
            android:textSize="@dimen/dp15"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:text="粉丝 121212"
            android:textColor="@color/gray_888"
            android:textSize="@dimen/dp13" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp25"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp16"
        android:background="@drawable/circle_gray_d"
        android:gravity="center"
        android:paddingLeft="@dimen/dp8"
        android:paddingRight="@dimen/dp8"
        android:text="取消关注"
        android:textColor="@color/gray_888"
        android:textSize="@dimen/dp11" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginRight="@dimen/dp16"
        android:background="@color/gray_5" />

</RelativeLayout>

