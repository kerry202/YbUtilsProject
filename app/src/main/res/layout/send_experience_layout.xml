<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10"
        android:background="@color/gray_5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:visibility="gone">

        <TextView
            android:id="@+id/flag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp17"
            android:text="热门标签"
            android:textColor="@color/gray_666"
            android:textSize="@dimen/dp15" />

        <RelativeLayout
            android:id="@+id/send_experience_rl"
            android:layout_width="@dimen/dp44"
            android:layout_height="@dimen/dp44"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone">

            <ImageView
                android:id="@+id/right_arrows_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp43"
            android:layout_marginRight="@dimen/dp12"
            android:layout_toLeftOf="@+id/send_experience_rl"
            android:layout_toRightOf="@+id/flag_tv"
            android:text="#选择合适的话题会让更多人看见你哦#"
            android:textColor="@color/gray_c"
            android:textSize="@dimen/dp12" />

    </RelativeLayout>

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/dp1"-->
        <!--android:background="@color/gray_5" />-->

    <!--<include layout="@layout/flow_layout" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:background="@color/gray_5">

        <RelativeLayout
            android:id="@+id/load_map"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp16"
            android:background="@drawable/circle_white">

            <ImageView
                android:visibility="gone"
                android:id="@+id/upload1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@mipmap/add_cover_icon" />

            <ImageView
                android:id="@+id/upload2"
                android:layout_width="@dimen/dp64"
                android:layout_height="53dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@mipmap/add_cover_icon" />

        </RelativeLayout>
    </RelativeLayout>

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:layout_marginLeft="@dimen/dp17"
        android:layout_marginRight="@dimen/dp17"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="请输入您的标题"
        android:maxLines="1"
        android:textColor="@color/gray_333"
        android:textSize="@dimen/dp15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginLeft="@dimen/dp17"
        android:layout_marginRight="@dimen/dp17"
        android:background="@color/gray_5" />

    <EditText
        android:id="@+id/des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp17"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginRight="@dimen/dp17"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="请输入您的商品描述，简介"
        android:textColor="@color/gray_333"
        android:textSize="@dimen/dp15" />

</LinearLayout>