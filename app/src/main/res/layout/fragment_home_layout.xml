<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44">

        <ImageView
            android:id="@+id/home_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp18"
            android:src="@mipmap/sort_icon" />

        <ImageView
            android:id="@+id/home_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp18"
            android:src="@mipmap/home_msg_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp40"
            android:layout_marginRight="@dimen/dp40"
            android:layout_toLeftOf="@id/home_msg"
            android:layout_toRightOf="@id/home_sort"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/home_jyt_ll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_jyt_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="经验帖"
                    android:textColor="@color/gray_333"
                    android:textSize="@dimen/dp16"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/home_jyt__line"
                    android:layout_width="@dimen/dp18"
                    android:layout_height="@dimen/dp3"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp5"
                    android:background="@color/price_red" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_1v1_ll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_1v1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="1v1咨询"
                    android:textColor="@color/gray_999"
                    android:textSize="@dimen/dp16" />

                <View
                    android:id="@+id/home_1v1__line"
                    android:layout_width="@dimen/dp18"
                    android:layout_height="@dimen/dp3"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp5"
                    android:background="@color/price_red"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_data_ll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_data_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="备考资料"
                    android:textColor="@color/gray_999"
                    android:textSize="@dimen/dp16" />

                <View
                    android:id="@+id/home_data__line"
                    android:layout_width="@dimen/dp18"
                    android:layout_height="@dimen/dp3"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp5"
                    android:background="@color/price_red"
                    android:visibility="invisible" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_searsh"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp30"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginTop="@dimen/dp7"
        android:layout_marginRight="@dimen/dp16"
        android:layout_marginBottom="@dimen/dp15"
        android:background="@drawable/circle_gray_ef">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@mipmap/searsh_icon"
            android:drawablePadding="@dimen/dp10"
            android:gravity="center"
            android:text="@string/search_str"
            android:textColor="@color/gray_989" />

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/home_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>